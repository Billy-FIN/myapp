<!DOCTYPE html>
<html>

<head>
    <title>
        Quick Notes for everyone to share
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <div class="filter">
        <h1>
            Notebook
        </h1>
        <p>Quick Notes for everyone to share</p>
        <br>
        <p class="d-inline-flex gap-1">
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-1"
                aria-expanded="false" aria-controls="collapse-1">
                Add a new Note
            </button>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-2"
                aria-expanded="false" aria-controls="collapse-2" style="margin-left: 20px;">
                Filter
            </button>
        </p>
        <div style="width: 30%; position: absolute; right: 2%; margin-top: -60px;">
            <form class="d-flex" method="get" action="notebook" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="searchBy">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
        <div class="collapse" id="collapse-1" style="width: 80%;">
            <form class="row g-3 needs-validation" method="post" action="notebook" novalidate>
                <div class="col-md-4">
                    <label for="validationCustom01" class="form-label">Title</label>
                    <input type="text" class="form-control" id="validationCustom01" name="title"
                        placeholder="Required a title">
                    <div class="invalid-feedback">
                        Please enter the title.
                    </div>
                </div>
                <div class="col-md-3">
                    <label for="validationCustom04" class="form-label">Category</label>
                    <select class="form-select" id="validationCustom04" name="category" required>
                        <option selected disabled value="">Choose...</option>
                        <option>Art</option>
                        <option>Automotive</option>
                        <option>Beauty</option>
                        <option>Books</option>
                        <option>Business</option>
                        <option>Career</option>
                        <option>Cooking</option>
                        <option>Culture</option>
                        <option>DIY & Crafts</option>
                        <option>Education</option>
                        <option>Environment</option>
                        <option>Fashion</option>
                        <option>Finance</option>
                        <option>Fitness</option>
                        <option>Food</option>
                        <option>Gaming</option>
                        <option>Health</option>
                        <option>History</option>
                        <option>Hobbies</option>
                        <option>Home & Garden</option>
                        <option>Inspiration</option>
                        <option>Languages</option>
                        <option>Life</option>
                        <option>Music</option>
                        <option>Movies</option>
                        <option>News</option>
                        <option>Outdoors</option>
                        <option>Parenting</option>
                        <option>Pets</option>
                        <option>Photography</option>
                        <option>Politics</option>
                        <option>Relationships</option>
                        <option>Science</option>
                        <option>Self-Care</option>
                        <option>Spirituality</option>
                        <option>Sports</option>
                        <option>Technology</option>
                        <option>Travel</option>
                        <option>Wellness</option>
                        <option>Others</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select a valid category.
                    </div>
                </div>
                <div class="col-md-4" style="width: 20%;">
                    <label for="validationCustom02" class="form-label">Tag</label>
                    <input type="text" class="form-control" id="validationCustom02" name="tag"
                        placeholder="example: #food" required>
                    <div class="invalid-feedback">
                        Please enter the tag.
                    </div>
                </div>
                <div class="col-md-3" style="width: 78.5%; ;">
                    <label for="validationTextarea" class="form-label">Details</label>
                    <textarea class="form-control" id="validationTextarea" name="details"
                        placeholder="Required some text" required></textarea>
                    <div class="invalid-feedback">
                        Please enter the details.
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                        <label class="form-check-label" for="invalidCheck">
                            Agree to public your notes to everyone
                        </label>
                        <div class="invalid-feedback">
                            You must agree before submitting.
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn1" type="submit" value="store">Submit</button>
                </div>
            </form>
        </div>
        <div class="collapse" id="collapse-2" style="width: 80%;">
            <form class="row g-3" method="get" action="notebook">
                <div class="col-md-4" style="width: 15%;">
                    <label for="validationCustom01" class="form-label">Username</label>
                    <input type="text" class="form-control" id="validationCustom01" name="username">
                </div>
                <div class="col-md-3" style="width: 20%;">
                    <label for="validationCustom04" class="form-label">Category</label>
                    <select class="form-select" id="validationCustom04" name="category">
                        <option></option>
                        <option>Art</option>
                        <option>Automotive</option>
                        <option>Beauty</option>
                        <option>Books</option>
                        <option>Business</option>
                        <option>Career</option>
                        <option>Cooking</option>
                        <option>Culture</option>
                        <option>DIY & Crafts</option>
                        <option>Education</option>
                        <option>Environment</option>
                        <option>Fashion</option>
                        <option>Finance</option>
                        <option>Fitness</option>
                        <option>Food</option>
                        <option>Gaming</option>
                        <option>Health</option>
                        <option>History</option>
                        <option>Hobbies</option>
                        <option>Home & Garden</option>
                        <option>Inspiration</option>
                        <option>Languages</option>
                        <option>Life</option>
                        <option>Music</option>
                        <option>Movies</option>
                        <option>News</option>
                        <option>Outdoors</option>
                        <option>Parenting</option>
                        <option>Pets</option>
                        <option>Photography</option>
                        <option>Politics</option>
                        <option>Relationships</option>
                        <option>Science</option>
                        <option>Self-Care</option>
                        <option>Spirituality</option>
                        <option>Sports</option>
                        <option>Technology</option>
                        <option>Travel</option>
                        <option>Wellness</option>
                        <option>Others</option>
                    </select>
                </div>
                <div class="col-md-4" style="width: 20%;">
                    <label for="validationCustom02" class="form-label">Tag</label>
                    <input type="text" class="form-control" id="validationCustom02" name="tag">
                </div>
                <div class="col-md-3" style="width: 10%;">
                    <label for="validationCustom04" class="form-label">Sort by</label>
                    <select class="form-select" id="validationCustom04" name="sortBy">
                        <option></option>
                        <option>category</option>
                        <option>tag</option>
                        <option>username</option>
                    </select>
                </div>
                <div class="col-12">
                    <button class="btn1 btn-primary">Show</button>
                </div>
            </form>
        </div>
    </div>
    <p>There are <%= items.length %> records</p>
    <table class="note-table">
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Tag</th>
            <th>Date</th>
            <th>Created by</th>
            <th>Operation</th>
        </tr>
        <% items.forEach(item=> { %>
            <tr>
                <td>
                    <%= item.title %>
                </td>
                <td>
                    <%= item.category %>
                </td>
                <td>
                    <%= item.tag %>
                </td>
                <td>
                    <%= item.date.toString().substr(0,24) %>
                </td>
                <td>
                    <%= item.username %>
                </td>
                <td>
                    <a href="/notebook/show/<%=item._id %>">
                        <i class="bi bi-hand-index-thumb"></i>
                    </a>
                </td>
            </tr>
            <% })%>

    </table>
    <script src="/js/validation.js"></script>
</body>

</html>